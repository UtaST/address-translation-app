<%= render 'shared/sub_header' %>
<div class="new-address">
  <div class="new-address-form">
    <div class="new-address-title">
      住所情報登録
    </div>

    <%= form_with model: @address, url: addresses_path, class: 'address-form', local: true do |f| %>
      <%= render "devise/shared/error_messages", model: @address %>

      <div class="field">
        <%= f.label :postal_code %><br />
        <%= f.text_field :postal_code, placeholder: '例) 000-0000', id: 'postal-code', autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :prefecture %><br />
        <%= f.text_field :prefecture, placeholder: '例) 〇〇県', id: 'prefecture' %>
      </div>

      <div class="field">
        <%= f.label :city %><br />
        <%= f.text_field :city, placeholder: '例) 〇〇市〇〇区', id: 'city' %>
      </div>

      <div class="field">
        <%= f.label :house_number %><br />
        <%= f.text_field :house_number, placeholder: '例) 0-00-0' %>
      </div>

      <div class="field">
        <%= f.label :building_name %><br />
        <%= f.text_field :building_name, placeholder: '例) 〇〇ビル' %>
      </div>

      <div class="actions">
        <%= f.submit "登録" %>
      </div>
    <% end %>
  </div>
</div>
<%= render 'shared/sub_footer' %>
